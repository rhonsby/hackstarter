<div class='company-form company-show row tab-content'>
  <div class='tab-pane active fade in' id='home'>
    <div class='col-md-8 left-show'>
      <img src='missing.png' id='company-show-photo'>
    </div>

    <div class='col-md-4 right-show'>
      <div class='company-stats'>
        <h1 class='stats-title investor'>
          <span class='investor-count'></span>
        </h1>
        <span class='stats-span investor'>investors</span>

        <h1 class='stats-title amount-raised'></h1>
        <span class='stats-span'>raised of
          $<span class='investment-goal'>0
          </span> goal
        </span>

        <h1 class='stats-title days-left'>0</h1>
        <span class='stats-span days'>days to go</span>
      </div>

      <button class='btn btn-lg btn-primary pledge-btn' data-toggle='modal'
        data-target='#pledge-modal'>
        <p>Back This Company</p>
        <p>$1 Minimum Pledge</p>
      </button>

      <p class='pledge-msg'>This company is only funded if at least
        $<span class='investment-goal'>0</span>
        is pledged by <%= company.escape('end_date') %>.</p>
    </div>
  </div>

  <div class='tab-pane fade in' id='updates'>
    <h1>Updates</h1>
  </div>

  <div class='tab-pane fade in' id='investors'>
    <h1>Investors</h1>
  </div>

  <div class='tab-pane fade in' id='comments'>
    <h1>Comments</h1>
  </div>
</div>

<%= JST['companies/payment_modal']({ company: company }) %>