<div class='tab-content'>
  <div class='tab-pane active fade in' id='home'>
    <img src='missing.png' id='company-show-photo'>

    <div class='company-story'>
      <h3 class='story-details company-pitch'>The Pitch</h3>
      <div class='company-pitch'>
      </div>

      <h3 class='story-details company-market'>The Market</h3>
      <div class='company-market'></div>
    </div>
  </div>

  <div class='tab-pane fade in' id='updates'>
    <% _(company.updates().reverse()).each(function (update, idx) { %>
      <div class='company-update'>
        <div class='panel-group' id='accordion'>
          <div class='panel'>
            <div class='panel-heading'>
              <h5 class='gray pull-right company-date'><%= update.escape('date') %></h5>
              <h4 class='blue'>
                <a data-toggle='collapse' data-parent='#accordion'
                  href='#<%= update.cid %>'>
                  Update #<%= company.updates().length - idx %>
                </a>
              </h4>
            </div>

            <div id='<%= update.cid %>' class='panel-collapse collapse in'>
              <h3 class='update-title'><%= update.escape('title') %></h3>
              <p class='update-content'>
                <%= marked(update.escape('body')) %>
              </p>
            </div>
          </div>
        </div>
      </div>
    <% }); %>
  </div>

  <div class='tab-pane fade in' id='investors'>
    <h1>Investors</h1>

    <ul class='investors-panel'>
    </ul>
  </div>

  <div class='tab-pane fade in' id='comments'>
    <h1>Comments</h1>
  </div>
</div>

<%= JST['companies/show/payment_modal']({ company: company }) %>