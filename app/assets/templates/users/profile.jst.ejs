<div class='index-panel index-panel-alt profile-panel'>
  <div class='container'>
    <div class='row'>
      <div class='col-md-4'>
        <img src='<%= user.escape('medium_photo') %>' class='profile-photo'></img>
      </div>
      <div class='col-md-8 profile-page-details'>
        <h1><%= user.escape('name') || user.escape('username') %></h1>
        <p>Backed <%= user.backedCompanies().length || 0 %> companies
          <% if (user.escape('website')) { %>
            · <a href='<%= user.escape('website') %>'>Website</a>
          <% }; %>
        </p>
        <div class='biography'>
          <p><%= user.escape('biography') %></p>
        </div>
      </div>
    </div>
  </div>
</div>


<div class='index-panel profile-panel recently-backed-panel'>
  <div class='container'>
    <ul class='profile-nav clearfix'>
      <li class='active'>
        <a href='#profile-backed-companies' data-toggle='tab'>
          Backed Companies
        </a>
      </li>
      <li>·</li>
      <li>
        <a href='#profile-companies-founded' data-toggle='tab'>
          Companies Founded
        </a>
      </li>
    </ul>

    <div class='tab-content'>
      <div class='tab-pane active' id='profile-backed-companies'>
        <% if (user.backedCompanies().length) { %>
          <% _(user.backedCompanies().last(3)).each(function (company) { %>
            <div class='index-card'>
              <%= JST['companies/company_card']({ company: company }) %>
            </div>
          <% }); %>
        <% }; %>
      </div>

      <div class='tab-pane' id='profile-companies-founded'>
        <% if (user.companies().length) { %>
          <% user.companies().each(function (company) { %>
            <div class='index-card'>
              <%= JST['companies/company_card']({ company: company }) %>
            </div>
          <% }); %>
        <% }; %>
      </div>
    </div>
  </div>
</div>