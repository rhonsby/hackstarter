<div class='row'>
  <div class='col-md-6 col-md-offset-3 auth-form'>
    <h1>Log In</h1>

    <form>
      <h4 class='label-error hidden'>Invalid username/password</h4>
      <div class='form-group'>
        <label for='user_username'>Username</label>
          <input type='text' name='user[username]'
                 class='form-control' id='user_username'>
      </div>

      <div class='form-group'>
        <label for='user_password'>Password</label>
          <input type='password' name='user[password]'
                 class='form-control' id='user_password'>
      </div>

      <input type='submit' value='Log me in' class='btn btn-primary'>
    </form>
  </div>
</div>