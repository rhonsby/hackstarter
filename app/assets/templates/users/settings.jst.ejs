<div class='user-settings'>
  <div class='container company-form'>
    <img src="<%= user.escape('large_photo_url') %>"
      class='profile-photo-settings pull-right profile-photo'></img>
    <h1>Edit your profile</h1>

    <div class='col-md-6'>
      <div class="form-group">
        <label for='user-avatar'>Avatar</label>
        <input type='file' class='form-control'
               name='user[avatar]'  id='user-avatar'>
        <div class="progress progress-striped active hidden">
          <div class="progress-bar"  role="progressbar" aria-valuenow="0" aria-valuemin="0" aria-valuemax="100" style="width: 0%">
            <p>Processing. Please wait...</p>
          </div>
        </div>
      </div>

      <form id='settings-form'>
        <div class='form-group'>
          <label for='user_name'>Name</label>
          <input id='user_name' name='user[name]' class='form-control'
            value='<%= user.escape('name') %>'>
        </div>

        <div class="form-group">
          <label for='user_biography'>Biography</label>
            <textarea name="user[biography]"
              class='form-control' id='user_biography'
              placeholder="We suggest a short bio. If it's 300 characters or less, it'll look great on your profile."><%= user.escape('biography') %></textarea>
        </div>

        <div class="form-group">
          <label for'user_location'>Location</label>
            <input type='text' name='user[location]' class='form-control'
            placeholder='San Francisco, CA' value="<%= user.escape('location') %>">
        </div>

        <div class="form-group">
          <label for'user_website'>Website</label>
            <input type='text' name='user[website]' class='form-control'
            id='user_website' value='<%= user.escape('website') %>'>
        </div>

        <button type='submit' class='btn btn-primary'>Save Settings</button>
        <a href='#/profile/<%= user.escape('id') %>'>View profile</a>
      </form>
    </div>
  </div>
</div>